<div class="fond m-0 p-1" style="background-color: $light-gray">
<div class="container mt-3">
<h1>My lists</h1>

<div class="cards-list">
<div class="row">
  <% @lists.each do |list| %>

    <div class="card-list col-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=  cl_image_path list.photo.key, height: 300, crop: :fill if list.photo.attached? %>')">
      <%= link_to list_path(list) do %>
        <h2><%= list.name %></h2>
        <ul>
          <% list.movies.each do |movie| %>
            <li><%= movie.title %></li>
          <% end %>
        </ul>
      <% end %>
      <%= link_to "X", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "delete-cross" %>
    </div>
  <% end %>
</div>
</div>

<div style= "background-image: url('img_girl.jpg');"></div>

</div>
</div>
